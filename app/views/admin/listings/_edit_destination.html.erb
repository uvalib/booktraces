<div class="modal destination-edit">
   <h4 class="modal-header">Edit Preservation</h4>
   <div class="modal-content">
      <%= form_tag("/admin/destinations/", method: "put", class: "pure-form pure-form-aligned") do %>
         <fieldset>
            <input name ="listing_id" type="hidden" value="<%= @listing.id %>">
            <div class="pure-control-group" id="destination-barcode-selector">
               <label class="pure-input-1-3">Barcode</label>
               <select class="pure-input-2-3" name="barcode">
                  <% @listing.barcodes.where("active=1").each do |bc|  %>
                     <option value="<%=bc.id%>"><%= bc.barcode %></option>
                  <% end %>
               </select>
            </div>
            <div class="pure-control-group">
               <label class="pure-input-1-3">Destination</label>
               <select class="pure-input-2-3" name="destination_name_id">
                  <% DestinationName.all.each do |d| %>
                     <option value="<%= d.id %>"><%= d.name %></option>
                  <% end %>
               </select>
            </div>
            <div class="pure-control-group">
               <label class="pure-input-1-3">Date Sent</label>
               <input class="pure-input-2-3" name="date_sent_out" type="text" placeholder="YYYY-MM-DD" value=""/>
            </div>
            <div class="pure-control-group">
               <label class="pure-input-1-3">Bookplate</label>
               <input class="pure-input-2-3" name="bookplate" type="text" placeholder="Bookplate" value=""/>
            </div>
         </fieldset>
      <% end %>
      <div class="modal-controls">
          <button class="pure-button cancel">Cancel</button>
          <button class="pure-button submit">Submit</button>
      </div>
   </div>
</div>
